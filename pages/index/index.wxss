.top-box {
  height: 45vh;
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
}

.top-box .logo {
  width: 325rpx;
  height: 325rpx;
}

.middle-box {
  height: 40vh;
  width: 100vw;
  color: white;
}

.middle-box .small-txt {
  font-weight: 100;
  font-size: 60rpx;
  margin-left: 10%;
}

.middle-box .medium-txt {
  font-weight: 200;
  font-size: 80rpx;
  margin-left: 20%
}

.middle-box .large-txt {
  font-weight: 600;
  font-size: 100rpx;
  margin-left: 30%;
}

.bottom-box {
  flex-grow: 1;
  width: 100vw;
  display: flex;
  justify-content: center;
}

.bottom-box .btn {
  width: 90vw;
  height: 120rpx;
  background: #353636;
  color: #EFCEC9;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 200;
  transition: all .25s ease;
}

.bottom-box .btn-hover {
  background: #515151;
}