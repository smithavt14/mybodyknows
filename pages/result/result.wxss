.page__container {
  background: radial-gradient(49.87% 22.45% at 50.13% 36.27%, #F8E6E3 6.5%, #EEB8B9 100%);
  position: relative;
}

.canvas {
  margin-top: 100rpx;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.25);
}

.note {
  font-size: 30rpx;
  font-family: cursive;
  color: #353636;
  margin-top: 5px;
}

.btn {
  width: 90vw !important;
  height: 120rpx;
  background: #353636;
  color: #EFCEC9;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 200;
  transition: all .25s ease;
  margin: 70rpx 0;
}

.btn-hover {
  background: #515151;
}