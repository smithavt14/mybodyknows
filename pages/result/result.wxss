.page__container {
  background: radial-gradient(49.87% 22.45% at 50.13% 36.27%, #F8E6E3 6.5%, #EEB8B9 100%);
}

.poster-container {
  width: 90vw;
  height: 600px;
  background: white;
  border-radius: 10rpx;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.25);
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.poster-container .banner {
  width: 100%;
  height: 25%;
  border-radius: 10rpx 10rpx 0 0;
}

.poster-container .user-container {
  height: 20%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.user-container .avatar {
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
}

.user-container .name {
  font-size: 20px;
  font-family: cursive;
  margin-left: 30rpx;
}

.score-container {
  height: 30%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.score-container .score {
  font-size: 50px;
  font-family: cursive;
}

.score-container .title {
  font-size: 30px;
  font-family: cursive;
  color: #EEB8B9;
}

.score-container .subtitle {
  width: 100%;
  font-size: 20px;
  font-family: cursive;
  padding: 0 30rpx;
  text-align: center;
  box-sizing: border-box;
  margin-top: 15rpx;
}