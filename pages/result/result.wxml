<view class="page__container">
  <block wx:if="{{showPoster}}">
    <canvas 
    class="canvas" 
    canvas-id="resultPoster" 
    bindlongtap="savePoster"
    style="width: {{poster.width}}px; height: {{poster.height}}px;"></canvas>

    <view class="note" >长按保存</view>

    <button 
    bindtap="navigateHome" 
    class="btn" 
    hover-class="btn-hover">回首页</button>
  </block>
</view>